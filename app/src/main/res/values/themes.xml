<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Main App Theme -->
    <style name="Theme.MOPCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
    </style>

    <!-- Custom Calendar Theme -->
    <style name="CustomCalendarTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:colorControlHighlight">@color/primary</item>
    </style>

    <!-- Animated Button Style -->
    <style name="AnimatedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Card Animation Style - FIXED -->
    <style name="AnimatedCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:stateListAnimator">@animator/card_state_animator</item>
    </style>
</resources>
